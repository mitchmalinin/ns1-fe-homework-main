{
    "parser": "babel-eslint",
    "extends": "eslint:recommended",
    "environment": "browser",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "rules": {
        "indent": [
            1,
            2 
        ],
        "quotes": [
            2,
            "single"
        ],
        "linebreak-style": [
            2,
            "unix"
        ],
        "semi": [
            2,
            "always"
        ],
        "eol-last": 1,
        "dot-notation": 0,
        "no-console": 1,
        "comma-dangle": 2,
        "no-dupe-keys": 2,
        "no-eq-null": 0,
        "no-eval": 2,
        "no-unused-vars": [1, {"vars": "all", "args": "after-used"}],
        "func-style": [2, "expression"],
        "new-cap": ["error", {"newIsCap": true}],
        "camelcase": ["error", {"properties": "never"}],
        "arrow-spacing": [2, {"before": true, "after": true}]
    }
}
